# CinemaHint Server Environment Variables

# Environment
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/cinemahint?retryWrites=true&w=majority
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars-long
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# External APIs
TMDB_API_KEY=your-themoviedb-api-key
OPENAI_API_KEY=sk-your-openai-api-key

# CORS & Frontend
FRONTEND_URL=https://cinemahint.com
ALLOWED_ORIGINS=https://cinemahint.com,https://www.cinemahint.com

# Rate Limiting & Performance
DAILY_RECOMMENDATION_LIMIT=5
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Caching Configuration
REDIS_TTL_USER_PROFILE=1800
REDIS_TTL_MOVIE_DETAILS=3600
REDIS_TTL_TMDB_POPULAR=900
REDIS_TTL_TMDB_SEARCH=600

# Logging
LOG_LEVEL=info

# SSL & Security (for production)
TRUST_PROXY=true
SECURE_COOKIES=true

# Monitoring
HEALTH_CHECK_TIMEOUT=5000